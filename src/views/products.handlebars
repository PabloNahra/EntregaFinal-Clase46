<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nuestros Productos</title>
    <link rel="stylesheet" href="css/products.css"> 
</head>
<body>

<div>
    <h1>Nuestros Productos</h1>
    <h2>Bienvenid@ {{user.first_name}} {{user.last_name}}</h2>
    <br><br>
    {{#each products.payload}}
        <div class="product-item">
            <p>Id: {{this._id}}</p>
            <p>Titulo: {{this.title}}</p>
            <img src="{{this.thumbnail.[0]}}" alt="Imagen del producto" class="product-image">
            <p>Descripcion: {{this.description}}</p>
            <p>Codigo: {{this.code}}</p>
            <p>Precio: $ {{this.price}}</p>
            <p>Disponible: {{this.available}}</p>
            <p>Stock: {{this.stock}}</p>
            <p>Categoria: {{this.category}}</p>
            <button class="add-to-cart-btn" id="{{this._id}}">AGREGAR AL CARRITO</button>
            <br><br>
        </div>
    {{/each}}
</div>

{{#if products.hasPrevPage}}
    <button><a href="/products?page={{products.prevPage}}">Anterior</a></button>
{{/if}}

{{#if products.hasNextPage}}
    <button><a href="/products?page={{products.nextPage}}">Siguiente</a></button>
{{/if}}

<script src="js/products.js"></script>