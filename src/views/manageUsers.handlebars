    <select name="email" id="emailInput"></select><br><br>
    <label for="">Nombre: </label><input type="text" name="first_name" readonly><br><br>
    <label for="">Apellido: </label><input type="text" name="last_name" readonly><br><br>
    {{!<label for="">Rol: </label><input type="text" name="role"><br><br>}}
    <label for="">Rol: </label>
    <select name="role" id="roleInput" disabled>
        <option value="ADMIN">ADMIN</option>
        <option value="USER">USER</option>
        <option value="PREMIUM">PREMIUM</option>
        <option value="OTRO">OTRO</option>
    </select>
    <br><br>
    <button type="submit">Modificar Rol (USER/PREMIUM)</button>
    <button type="button" id="deleteBtn">Eliminar Usuario</button>
</form>

